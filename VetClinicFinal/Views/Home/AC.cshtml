@model AddCancelViewModel

@{
    ViewData["Title"] = "AC";
    Layout = "~/Views/Shared/_LayoutViews.cshtml";
}

<center>
    <h1>Appointment cancelation</h1>
    <br />
    <br />
    Let clients know their appointment is canceled.
    <br />

    <form asp-action="EnviaMailAC">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="DoctorId" class="control-label"></label>
            <select asp-for="DoctorId" asp-items="Model.Employees" class="form-control"></select>
            <span asp-validation-for="DoctorId" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Send</button>
    </form>
    <br />
</center>