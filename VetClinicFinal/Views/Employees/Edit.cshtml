@model VetClinic.Data.Entities.Employee

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutViews.cshtml";
}

<center>
    <h1>
        Edit
    </h1>
</center>

<br />

<br />
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Job" class="control-label"></label>
                <select asp-for="Job" class="form-control">
                    <option selected disabled>Select a job</option>
                    <option value="Doctor">Doctor</option>
                    <option value="Assistant">Doctor's assistant</option>
                    <option value="Receptionist">Receptionist</option>
                </select>
                <span asp-validation-for="Job" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" value="Save" class="btn btn-primary">
                    <i class="fas fa-save"></i> Save Changes
                </button>
                <a asp-action="Index" class="btn btn-success"><i class="fa fa-chevron-left"></i> Back to List</a>
            </div>
        </form>
    </div>
</div>
